{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Publish to Pi (debug)",
            "command": "pwsh",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "args": [
                "-Command",
                "dotnet publish -r linux-arm --self-contained ${workspaceFolder}\\${workspaceFolderBasename}\\${workspaceFolderBasename}.csproj",
                "&&",
                "bash",
                "-c",
                "'rsync -az --update --verbose $(wslpath '\"'${workspaceFolder}'\"')/${workspaceFolderBasename}/bin/Debug/net6.0/linux-arm/publish/ pi@raspberrypi4.bnet.local:/home/pi/Desktop/${workspaceFolderBasename}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Publish to Pi (release)",
            "command": "pwsh",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "args": [
                "-Command",
                "dotnet publish -r linux-arm -c Release --self-contained ${workspaceFolder}\\${workspaceFolderBasename}\\${workspaceFolderBasename}.csproj",
                "&&",
                "bash",
                "-c",
                "'rsync -az --update --verbose  $(wslpath '\"'${workspaceFolder}'\"')/${workspaceFolderBasename}/bin/Release/net6.0/linux-arm/publish/ pi@raspberrypi4.bnet.local:/home/pi/Desktop/${workspaceFolderBasename}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}